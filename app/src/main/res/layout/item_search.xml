<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:id="@+id/item_search_layout">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="48dp"
                    android:paddingHorizontal="16dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/item_search_title"
                  android:text="내 캘린더"
                  android:textSize="16sp"
                  android:textColor="@color/text"
                  android:ellipsize="end"
                  android:layout_centerVertical="true"
                  android:layout_alignParentStart="true"
                  android:fontFamily="@font/medium"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_centerVertical="true"
                  android:layout_alignParentEnd="true"
                  android:id="@+id/item_search_date"
                  android:text="yyyy년 M월 d일"
                  android:textSize="14sp"
                  android:fontFamily="@font/medium"/>
    </RelativeLayout>

    <ImageView android:layout_width="match_parent" android:layout_height="1dp"
               android:id="@+id/item_search_divider"
               android:background="@color/divider"/>
</LinearLayout>