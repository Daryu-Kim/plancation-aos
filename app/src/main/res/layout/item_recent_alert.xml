<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="12dp"
              android:gravity="top"
              android:layout_marginBottom="12dp"
              android:background="@drawable/form_alert"
              android:id="@+id/item_recent_alert_layout">
    <ImageView android:layout_width="24dp" android:layout_height="24dp"
               android:backgroundTint="@color/primary"
               android:background="@drawable/ic_todo"
               android:id="@+id/item_recent_alert_ic"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="vertical"
    android:layout_marginStart="12dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="horizontal"
        android:gravity="bottom">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:ellipsize="end"
                      android:maxLines="1"
                      android:text="과제 제출"
                      android:textSize="16sp"
                      android:textColor="@color/text"
                      android:fontFamily="@font/bold"
                      android:id="@+id/item_recent_alert_title"/>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="5월 12일"
                      android:layout_marginStart="6dp"
                      android:textSize="12sp"
                      android:fontFamily="@font/bold"
                      android:id="@+id/item_recent_alert_date"/>
        </LinearLayout>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="'과제 제출'까지 7일 남았습니다."
                  android:layout_marginTop="8dp"
                  android:textSize="14sp"
                  android:textColor="@color/text"
                  android:fontFamily="@font/medium"
                  android:id="@+id/item_recent_alert_content"/>
    </LinearLayout>
    
</LinearLayout>