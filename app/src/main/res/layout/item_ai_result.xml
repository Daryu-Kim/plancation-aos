<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:background="@color/divider"
                  android:paddingVertical="8dp"
                  android:visibility="gone"
                  android:id="@+id/ai_result_date_layout"
                  android:layout_marginBottom="16dp"
                  android:paddingHorizontal="16dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="2023-05-05 FRI"
                  android:id="@+id/ai_result_date_text"
                  android:textColor="@color/accent"
                  android:textSize="16sp"
                  android:fontFamily="@font/bold"
        />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ai_result_item_layout"
            android:background="@drawable/form_todo_item"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:longClickable="true"
            android:paddingStart="12dp"
            android:paddingVertical="8dp"
            android:layout_marginHorizontal="24dp"
            android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
                android:layout_width="64dp" android:layout_height="wrap_content"
                android:text="AM 99:99 ~\nPM 99:99"
                android:minHeight="0dp"
                android:background="@android:color/transparent"
                android:id="@+id/ai_result_item_date"
                android:gravity="center_vertical|start"
                android:textColor="@color/text"
                android:textSize="12sp"
                android:fontFamily="@font/medium"/>
        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:background="@android:color/transparent"
                  android:hint="일정 제목을 입력해주세요!"
                  android:id="@+id/ai_result_item_title"
                  android:layout_marginHorizontal="8dp"
                  android:textSize="14sp"
                  android:textColor="@color/text"
                  android:fontFamily="@font/medium"
                  android:textColorHint="@color/hint_text"/>
    </LinearLayout>
</LinearLayout>