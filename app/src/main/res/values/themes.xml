<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Plancation" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
<!--        <item name="android:background">@color/light_bg</item>-->
        <item name="android:includeFontPadding">false</item>
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="bottomSheetStyle">@style/BottomSheetRoundedStyle</item>
    </style>

    <style name="BottomSheetRoundedStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/form_shape</item>
    </style>

    <style name="CustomSpinnerTheme">
        <item name="android:paddingVertical">8dp</item>
        <item name="android:paddingHorizontal">16dp</item>
    </style>

    <style name="DatePickerTheme" parent="android:ThemeOverlay.Material.Light">
        <item name="android:datePickerStyle">@style/DatePickerStyle</item>
    </style>

    <style name="DatePickerStyle" parent="android:Widget.Material.DatePicker">
        <item name="android:calendarViewShown">false</item>
        <item name="android:datePickerMode">spinner</item>
    </style>

    <style name="FormTextView">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>

    <style name="FormEditText" parent="FormTextView">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColorHint">@color/hint_text</item>
    </style>

    <style name="TimePickerTheme" parent="android:ThemeOverlay.Material.Light">
        <item name="android:datePickerStyle">@style/TimePickerStyle</item>
    </style>

    <style name="TimePickerStyle" parent="android:Widget.Material.TimePicker">
        <item name="android:calendarViewShown">false</item>
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="NumberPickerTheme" parent="android:ThemeOverlay.Material.Light"></style>

</resources>